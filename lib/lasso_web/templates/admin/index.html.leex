<div class="row justify-content-center">
    <div class="col-12" id="stats">

        <div class="card-group">
            <div class="card mb-3">
                <h3 class="card-header">Active lassos</h3>
                <div class="card-body">
                    <p class="card-text">Number of lassos that are active right now</p>
                    <span class="card-title float-right" style="font-size: 3em;"><%= @active_lassos %></span>
                </div>
            </div>

            <div class="card mb-3">
                <h3 class="card-header">Total lassos</h3>
                <div class="card-body">
                    <p class="card-text">Number of lassos created since last reboot</p>
                    <span class="card-title float-right" style="font-size: 3em;"><%= @total_lassos %></span>
                </div>
            </div>
        </div>
    </div>
</div>
